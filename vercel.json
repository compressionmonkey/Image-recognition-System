{
  "version": 2,
  "buildCommand": "npm install",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/style.css",
      "dest": "/public/style.css"
    },
    {
      "src": "/index.js",
      "dest": "/public/index.js"
    },
    {
      "src": "/((?!api/.*).*)",
      "dest": "/public/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    }
  ]
}
