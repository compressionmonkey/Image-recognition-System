{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["public/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/style\\.css",
      "dest": "/public/style.css",
      "headers": { 
        "Content-Type": "text/css",
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/index\\.js",
      "dest": "/public/index.js",
      "headers": { 
        "Content-Type": "application/javascript",
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
